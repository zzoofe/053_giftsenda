extends common/layout

block content
    main.s-main
        .container
            .b-title
                h1 New Bulk Senda
            .b-step
                .b-step__item.is-active
                    .b-step__item__num
                        strong 1
                        span Step
                    .b-step__item__label Recipients
                .b-step__item.is-active
                    .b-step__item__num
                        strong 2
                        span Step
                    .b-step__item__label Choose Gifts
                .b-step__item.is-active
                    .b-step__item__num
                        strong 3
                        span Step
                    .b-step__item__label Messages
                .b-step__item
                    .b-step__item__num
                        strong 4
                        span Step
                    .b-step__item__label Review
            .b-sendEmail
                div
                    span Send E-mail Gift Invtitations first
                    .form-check-2
                        input#ch22.sendEmail(type="checkbox")
                        label(for="ch22")
            .b-sendEmailFrame
                .b-sendEmailFrame__padd
                    .b-sendEmailFrame__info
                        div
                            a.link-blue(href="javascript:;" data-micromodal-trigger="modal-4") Design
                        div
                            | Gift Invitation Delivery Date:
                            span 22/03/2020
                            .el-date-p
                                +svg("calendar").link-date
                    .b-sendEmailFrame__row
                        div
                            span Enable swap to charity
                            .form-check-2
                                input#ch51(type="checkbox")
                                label(for="ch51")
                        div
                            span Gift can be declined
                            .form-check-2
                                input#ch52(type="checkbox")
                                label(for="ch52")
                        div
                            span Ask Recipient to verify address
                            .form-check-2
                                input#ch53(type="checkbox")
                                label(for="ch53")
            .b-title_bl
                h2 Design your Greeting Card
            .b-design
                include includes/step-3/select
                .b-design__canvas
                    canvas
                .b-design__btn
                    a.btn.btn_bl.btn_w170(href="#") Save
            .b-btnBar
                a.btn.btn_bl.btn_lg.btn_prev(href="#")
                    +svg("arw-btn-prev")
                    | GIFTS
                a.btn.btn_bl.btn_lg.btn_next(href="#")
                    | REVIEW
                    +svg("arw-btn-next")
    include includes/modal/modal-4
